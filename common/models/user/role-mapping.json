{
  "name": "RoleMapping",
  "description": "Map principals to roles",
  "base": "Model",
  "idInjection": true,
  "options": {
    "validateUpsert": true,
    "mysql": {
      "table": "RoleMapping"
    }
  },
  "properties": {
    "id": {
      "type": "string",
      "id": true,
      "generated": true
    },
    "accessType": {
      "type": "string"
    },
    "principalType": {
      "type": "string",
      "description": "The principal type, such as USER, APPLICATION, ROLE, or user model name in case of multiple user models"
    },
    "principalId": {
      "type": "string",
      "index": true
    },
    "permission": {
      "type": "string"
    },
    "property": {
      "type": "string"
    },
    "roleId": {
      "type": "number"
    }
  },
  "relations": {
    "role": {
      "type": "belongsTo",
      "model": "Role",
      "foreignKey": "roleId"
    }
  }
}